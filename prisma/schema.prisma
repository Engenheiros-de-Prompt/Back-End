// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  feedbacks  Feedback[]
  badges     UserBadge[]
  teams      TeamUser[]
  managedTeams Team[]   @relation("ManagerTeams", fields: [], references: [])
  Manager    Manager?    @relation(fields: [id], references: [userId])
}

model Badge {
  id     Int         @id @default(autoincrement())
  name   String
  users  UserBadge[]
}

model UserBadge {
  user     User @relation(fields: [userId], references: [id])
  userId   Int
  badge    Badge @relation(fields: [badgeId], references: [id])
  badgeId  Int

  @@id([userId, badgeId])
}

model Manager {
  userId Int   @id
  user   User  @relation(fields: [userId], references: [id])
  teams  Team[] @relation("ManagerTeams")
}

model Team {
  id          Int        @id @default(autoincrement())
  name        String
  managerId   Int
  manager     User       @relation("ManagerTeams", fields: [managerId], references: [id])
  users       TeamUser[]
  sprints     Sprint[]
}

model TeamUser {
  team     Team @relation(fields: [teamId], references: [id])
  teamId   Int
  user     User @relation(fields: [userId], references: [id])
  userId   Int

  @@id([teamId, userId])
}

model Feedback {
  id     Int    @id @default(autoincrement())
  Hard   String
  Soft   String
  Score  Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model Sprint {
  id      Int    @id @default(autoincrement())
  name    String
  team    Team   @relation(fields: [teamId], references: [id])
  teamId  Int
}
